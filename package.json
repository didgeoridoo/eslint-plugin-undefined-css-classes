{
  "name": "eslint-plugin-undefined-css-classes",
  "version": "0.1.2",
  "description": "ESLint plugin to detect undefined CSS classes in HTML/JSX",
  "main": "lib/index.js",
  "scripts": {
    "test": "jest",
    "lint": "eslint lib/**/*.js",
    "prepare": "husky install",
    "prepublishOnly": "npm test && npm run lint",
    "version:patch": "npm version patch && git push && git push --tags",
    "version:minor": "npm version minor && git push && git push --tags",
    "version:major": "npm version major && git push && git push --tags",
    "version:prerelease": "npm version prerelease --preid=beta && git push && git push --tags",
    "release": "npm run version:patch",
    "release:minor": "npm run version:minor",
    "release:major": "npm run version:major",
    "release:beta": "npm run version:prerelease"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "css",
    "classes",
    "validation",
    "tailwind"
  ],
  "author": "eslint-plugin-undefined-css-classes contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/didgeoridoo/eslint-plugin-undefined-css-classes.git"
  },
  "bugs": {
    "url": "https://github.com/didgeoridoo/eslint-plugin-undefined-css-classes/issues"
  },
  "homepage": "https://github.com/didgeoridoo/eslint-plugin-undefined-css-classes#readme",
  "files": [
    "lib/",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "eslint": ">=7.0.0"
  },
  "devDependencies": {
    "eslint": "^9.32.0",
    "jest": "^30.0.5",
    "@eslint/js": "^9.32.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "postcss": "^8.4.31",
    "postcss-selector-parser": "^6.0.13",
    "glob": "^10.3.10",
    "micromatch": "^4.0.5"
  },
  "engines": {
    "node": ">=18.18.0"
  }
}
